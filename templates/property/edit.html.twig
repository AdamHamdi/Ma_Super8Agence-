{% extends 'base.html.twig' %} {% block body %}
<div class="container">
    <h1>Editer le bien</h1>
    {{form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form_title)}}</div>
        <div class="col-md-4">{{ form_row(form_surface)}}</div>
        <div class="col-md-4">{{ form_row(form_price)}}</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{ form_row(form.rooms)}}</div>
        <div class="col-md-2">{{ form_row(form.bedrooms)}}</div>
        <div class="col-md-2">{{ form_row(form.heat)}}</div>
        <div class="col-md-2">{{ form_row(form.floor)}}</div>

    </div>
    <div class="row">
        <div class="col-md-5">{{ form_row(form.address)}}</div>
        <div class="col-md-2">{{ form_row(form.city)}}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btb btn-primary">Editer</button> {{ form_end(form) }}
</div>

{% endblock %}